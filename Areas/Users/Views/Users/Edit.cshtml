<div class="container">
    <div class="page-header">
        <h1 class="page-header__title">Add Users</h1>
    </div>
    <form asp-route-id="@Model.Id" asp-area="Users" asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="page-tools">
            <div class="page-tools__breadcrumbs">
                <div class="breadcrumbs">
                    <div class="breadcrumbs__container">
                        <ol class="breadcrumbs__list">
                            <li class="breadcrumbs__item">
                                <a class="breadcrumbs__link" href="index.html">
                                    <svg class="icon-icon-home breadcrumbs__icon">
                                        <use xlink:href="#icon-home"></use>
                                    </svg>
                                    <svg class="icon-icon-keyboard-right breadcrumbs__arrow">
                                        <use xlink:href="#icon-keyboard-right"></use>
                                    </svg>
                                </a>
                            </li>
                            <li class="breadcrumbs__item disabled"><a class="breadcrumbs__link"
                                    href="#"><span>E-commerce</span>
                                    <svg class="icon-icon-keyboard-right breadcrumbs__arrow">
                                        <use xlink:href="#icon-keyboard-right"></use>
                                    </svg></a>
                            </li>
                            <li class="breadcrumbs__item"><a class="breadcrumbs__link"
                                    href="products.html"><span>Users</span>
                                    <svg class="icon-icon-keyboard-right breadcrumbs__arrow">
                                        <use xlink:href="#icon-keyboard-right"></use>
                                    </svg></a>
                            </li>
                            <li class="breadcrumbs__item active"><span class="breadcrumbs__link">Edit User</span>
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="card add-product card--content-center">
            <div class="card__wrapper">
                <div class="card__container">
                    <div class="add-product__row">

                        <div class="add-product__right">
                            <div class="row row--md">
                                <div class="col-12 form-group form-group--lg">
                                    <label class="form-label" asp-for="Id"></label>
                                    <div class="input-group">
                                        <input class="input" type="text" placeholder="" required asp-for="Id" readonly>
                                        <span asp-validation-for="Id" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 form-group form-group--lg">
                                    <label class="form-label" asp-for="UserName"></label>
                                    <div class="input-group">
                                        <input class="input" type="text" placeholder="" required asp-for="UserName"
                                            readonly>
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 form-group form-group--lg">
                                    <label class="form-label" asp-for="Email"></label>
                                    <div class="input-group">
                                        <input class="input" type="text" placeholder="" required asp-for="Email"
                                            readonly>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-12 form-group form-group--lg">
                                    <label class="form-label" asp-for="UserStatusId"></label>
                                    <div class="input-group">
                                        <select class="input js-input-select input--fluid" asp-for="UserStatusId"
                                            asp-items="ViewBag.UserStatusId"></select>
                                        <span asp-validation-for="UserStatusId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12 form-group form-group--lg">
                                    <label class="form-label" asp-for="RoleId"></label>
                                    <div class="input-group">

                                        <select class="input js-input-select input--fluid" name="RoleId"
                                            asp-items="@ViewBag.RoleId"></select>
                                        <span asp-validation-for="RoleId" class="text-danger"></span>
                                    </div>
                                </div>

                            </div>
                            <div class="add-product__submit">
                                <div class="modal__footer-button">
                                    <button class="button button--primary button--block" data-dismiss="modal"
                                        data-modal="#addProductSuccess" type="submit" value="Edit"><span
                                            class="button__text">Edit</span>
                                    </button>
                                </div>
                                <div class="modal__footer-button"><a class="button button--secondary button--block"
